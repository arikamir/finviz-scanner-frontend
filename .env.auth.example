# Gmail Authentication Configuration
# Copy this file to .env.auth and update with your actual values

# Google OAuth Client ID (get this from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-oauth-client-id-here

# Optional: Google OAuth Client Secret (for server-side verification)
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret-here

# Authentication settings
AUTH_REQUIRED=true
AUTH_SESSION_TIMEOUT=3600

# Development settings
DEV_MODE=true
DEV_SKIP_AUTH=false
