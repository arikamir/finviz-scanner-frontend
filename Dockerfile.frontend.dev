# Development Frontend Dockerfile - optimized for development workflow
FROM nginx:alpine

# Install development tools with cache cleanup
RUN apk add --no-cache gettext curl

# Copy HTML content
COPY frontend.html /usr/share/nginx/html/index.html

# Copy nginx development configuration
COPY nginx.conf.dev /etc/nginx/nginx.conf

# Create simple development startup script
RUN echo '#!/bin/sh' > /docker-entrypoint.sh && \
    echo 'echo "Starting development nginx server"' >> /docker-entrypoint.sh && \
    echo 'exec nginx -g "daemon off;"' >> /docker-entrypoint.sh && \
    chmod +x /docker-entrypoint.sh

# Expose development port
EXPOSE 80

# Fast health check for development
HEALTHCHECK --interval=15s --timeout=3s --start-period=5s --retries=2 \
    CMD curl -f http://localhost/ || exit 1

# Start nginx
CMD ["/docker-entrypoint.sh"]
